<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.fastbase.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80667277"
        android:clickable="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lin_filter"
        android:background="#00667277"
        android:clickable="true"
        android:visibility="gone" />

    <!--Layout for drawer menu-->
    <LinearLayout
        android:id="@+id/lin_menu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="@color/Header_bg"
        android:clickable="true"
        android:elevation="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_menu_open"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/Header_bg"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/iv_open"
                android:layout_width="24dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="13dp"
                android:src="@drawable/ic_menu_open" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/iv_open"
                android:fontFamily="@font/helveticaneue_bold"
                android:text="Webleads"
                android:textColor="@color/text"
                android:textSize="17dp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lin_header"
            android:background="@color/header_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_web"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@color/menu_bg">

                <ImageView
                    android:id="@+id/iv_lead"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/ic_webleads_active" />

                <TextView
                    android:id="@+id/tv_webleads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_toEndOf="@+id/iv_lead"
                    android:layout_toRightOf="@+id/iv_lead"
                    android:fontFamily="@font/helveticaneue"
                    android:text="WEBLEADS"
                    android:textColor="@color/menu_text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_web_count"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/menu_text_fill"
                    android:fontFamily="@font/helveticaneue"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hot"
                android:layout_width="fill_parent"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/iv_hot"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/ic_hot" />

                <TextView
                    android:id="@+id/tv_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_toEndOf="@+id/iv_hot"
                    android:layout_toRightOf="@+id/iv_hot"
                    android:fontFamily="@font/helveticaneue"
                    android:text="HOT LEADS"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_hot_count"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/menu_text_bg"
                    android:fontFamily="@font/helveticaneue"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="@color/text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_ad"
                android:layout_width="fill_parent"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/iv_ad"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/ic_ad" />

                <TextView
                    android:id="@+id/tv_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_toEndOf="@+id/iv_ad"
                    android:layout_toRightOf="@+id/iv_ad"
                    android:fontFamily="@font/helveticaneue"
                    android:text="ADWORDS LEADS"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_ad_count"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/menu_text_bg"
                    android:fontFamily="@font/helveticaneue"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="@color/text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_total"
                android:layout_width="fill_parent"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/iv_total"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/ic_total" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_toEndOf="@+id/iv_total"
                    android:layout_toRightOf="@+id/iv_total"
                    android:fontFamily="@font/helveticaneue"
                    android:text="WEB VISITORS"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_total_count"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/menu_text_bg"
                    android:fontFamily="@font/helveticaneue"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="@color/text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_email"
                android:layout_width="fill_parent"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/ic_track" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_toEndOf="@+id/iv_email"
                    android:layout_toRightOf="@+id/iv_email"
                    android:fontFamily="@font/helveticaneue"
                    android:text="EMAIL TRACKING"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/menu_text_fill"
                    android:fontFamily="@font/helveticaneue"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!--Layout design for lead page-->
    <LinearLayout
        android:id="@+id/lin_header"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/Header_bg"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/rl_menu"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="24dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="13dp"
                android:src="@drawable/ic_menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/iv"
                android:fontFamily="@font/helveticaneue_bold"
                android:text="Webleads"
                android:textColor="@color/text"
                android:textSize="17dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lin_profile"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/lin_name"
                android:layout_toStartOf="@id/lin_name"
                android:src="@drawable/ic_profile_icon" />

            <LinearLayout
                android:id="@+id/lin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_down"
                android:layout_toStartOf="@id/iv_down"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneue_bold"
                    android:singleLine="true"
                    android:text="rasmus refer"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneue"
                    android:text="Free plan"
                    android:textColor="@color/free"
                    android:textSize="13dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_down" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lin_header"
        android:background="@color/header_line" />

    <!--Layout for profile setting-->
    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lin_header"
        android:background="@color/white"
        android:clickable="true"
        android:elevation="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/helveticaneue"
                    android:text="Change Password"
                    android:textColor="@color/text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/helveticaneue"
                    android:text="Profile Details"
                    android:textColor="@color/text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_logout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/helveticaneue"
                    android:text="Logout"
                    android:textColor="@color/text" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <!--Layout for property Panel-->
    <LinearLayout
        android:id="@+id/lin_filter"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/lin_header"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/lin_weblist"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="0.32"
            android:gravity="center|left"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/helveticaneue"
                android:text="Property"
                android:textColor="@color/text"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableRight="@drawable/edit_down"
                android:fontFamily="@font/helveticaneue"
                android:singleLine="true"
                android:text="All Websites"
                android:textColor="@color/text"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="0.32"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_totallead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/edit_help"
                    android:fontFamily="@font/helveticaneue"
                    android:singleLine="true"
                    android:text="WebLeads"
                    android:textColor="@color/orange"
                    android:textSize="13dp" />


                <ImageView
                    android:id="@+id/iv_loading"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/progress_animation"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneue"
                    android:text="0"
                    android:textColor="@color/text"
                    android:textSize="17dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="0.36"
            android:gravity="center|right"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/lin_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/edit_bell"
                    android:fontFamily="@font/helveticaneue"
                    android:gravity="bottom"
                    android:text="Periode"
                    android:textColor="@color/text"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_periode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/edit_down"
                    android:fontFamily="@font/helveticaneue"
                    android:singleLine="true"
                    android:text="All Time"
                    android:textColor="@color/text"
                    android:textSize="17dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lin_filter"
        android:background="@color/header_line" />

    <!--Layout for search property-->
    <LinearLayout
        android:id="@+id/lin_property"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_filter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:clickable="true"
        android:elevation="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_margin="5dp"
            android:background="@drawable/image_bg"
            android:padding="5dp">

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/helveticaneue"
                android:hint="Search options"
                android:textColor="@color/text" />
        </RelativeLayout>

        <ListView
            android:id="@+id/list_web"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:scrollbars="none" />
    </LinearLayout>

    <!--Layout for time-->
    <ListView
        android:id="@+id/list_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_filter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/lead_bg"
        android:clickable="true"
        android:divider="@null"
        android:elevation="10dp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin_filter"
        android:layout_margin="14dp" />
</RelativeLayout>
