<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_code"
                android:layout_toStartOf="@+id/tv_code"
                android:fontFamily="@font/helveticaneue"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="Applied ststems, inc"
                android:textColor="@color/text"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_flag"
                android:layout_toStartOf="@+id/iv_flag"
                android:fontFamily="@font/helveticaneue"
                android:text="UK"
                android:textColor="@color/text"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iv_flag"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_us" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/iv_url"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_url" />

            <TextView
                android:id="@+id/tv_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/iv_url"
                android:layout_toRightOf="@+id/iv_url"
                android:fontFamily="@font/helveticaneue"
                android:text="www.cokal.com.au"
                android:textColor="@color/text"
                android:textSize="14dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/rl_profile"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:gravity="center|bottom">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_buildingmark" />

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/iv_profile"
                    android:layout_toRightOf="@+id/iv_profile"
                    android:fontFamily="@font/helveticaneue"
                    android:singleLine="true"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignEnd="@+id/tv_profile"
                    android:layout_alignLeft="@+id/tv_profile"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/iv_profile"
                    android:layout_alignStart="@+id/iv_profile"
                    android:background="@color/blue"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_visitor"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:gravity="center|bottom">

                <ImageView
                    android:id="@+id/iv_visitor"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_visitor" />

                <TextView
                    android:id="@+id/tv_visitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/iv_visitor"
                    android:layout_toRightOf="@+id/iv_visitor"
                    android:fontFamily="@font/helveticaneue"
                    android:singleLine="true"
                    android:text="Interaction"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view_visitor"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignEnd="@+id/tv_visitor"
                    android:layout_alignLeft="@+id/tv_visitor"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/iv_visitor"
                    android:layout_alignStart="@+id/iv_visitor"
                    android:background="@color/blue"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_contact"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:gravity="center|bottom">

                <ImageView
                    android:id="@+id/iv_contact"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_contact" />

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/iv_contact"
                    android:layout_toRightOf="@id/iv_contact"
                    android:fontFamily="@font/helveticaneue"
                    android:singleLine="true"
                    android:text="Contact"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignEnd="@+id/tv_contact"
                    android:layout_alignLeft="@+id/tv_contact"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/iv_contact"
                    android:layout_alignStart="@+id/iv_contact"
                    android:background="@color/blue"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/header_line" />

    <FrameLayout
        android:id="@+id/container_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
